    <modelVersion>4.0.0</modelVersion>

    <groupId>java-design-patterns</groupId>
    <artifactId>java-design-patterns</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <junit.version>5.0.2</junit.version>
